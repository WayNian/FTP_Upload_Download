<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_txt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.waynian.ftp_upload.activity.TXTActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常州工学院"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:textColor="@android:color/white"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:text="处理后:"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_newImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_new"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_newImage"
        android:text="处理前:"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_oldImage"
        android:layout_width="512dp"
        android:layout_height="512dp"
        android:layout_below="@+id/tv_old"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:visibility="gone" />


    <ScrollView
        android:id="@+id/main"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/et1"
                android:layout_below="@+id/et1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="7"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/tv1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="dualfilt1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et2"
                android:layout_alignBottom="@+id/et2"
                android:layout_toLeftOf="@+id/et1"
                android:layout_toStartOf="@+id/et1"
                android:text="小波分解层数："
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et1"
                android:layout_alignBottom="@+id/et1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="56dp"
                android:layout_marginStart="56dp"
                android:text="小波名称："
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/et2"
                android:layout_below="@+id/et2"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et3"
                android:layout_alignBottom="@+id/et3"
                android:layout_alignEnd="@+id/tv2"
                android:layout_alignRight="@+id/tv2"
                android:text="分界层数："
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/et3"
                android:layout_below="@+id/et3"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1.0"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et4"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/et4"
                android:layout_below="@+id/et4"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1.0"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et5"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/et5"
                android:layout_below="@+id/et5"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1.0"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv6"
                android:layout_marginLeft="10dp"
                android:text="双树复小波六个方向的系数权重:"
                android:textSize="20sp" />


            <CheckBox
                android:id="@+id/cb13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et6"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/et6"
                android:layout_below="@+id/et12"
                android:checked="true"
                android:ems="10" />

            <TextView
                android:id="@+id/tv13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cb13"
                android:layout_alignBottom="@+id/cb13"
                android:layout_alignEnd="@+id/tv6"
                android:layout_alignRight="@+id/tv6"
                android:text="采用虚数分解："
                android:textSize="16sp" />


            <EditText
                android:id="@+id/et14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cb13"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/cb13"
                android:layout_below="@+id/cb13"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et14"
                android:layout_alignBottom="@+id/et14"
                android:layout_alignEnd="@+id/tv13"
                android:layout_alignRight="@+id/tv13"
                android:text="连拍张数："
                android:textSize="16sp" />


            <CheckBox
                android:id="@+id/cb15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et14"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/et14"
                android:layout_below="@+id/et14"
                android:ems="10" />

            <TextView
                android:id="@+id/tv15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cb15"
                android:layout_alignBottom="@+id/cb15"
                android:layout_alignEnd="@+id/tv14"
                android:layout_alignRight="@+id/tv14"
                android:text="是否无限连拍："
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cb15"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/cb15"
                android:layout_below="@+id/cb15"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0.0"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et16"
                android:layout_alignBottom="@+id/et16"
                android:layout_alignEnd="@+id/tv15"
                android:layout_alignRight="@+id/tv15"
                android:text="连拍间隔时间(s)："
                android:textSize="16sp"
                android:visibility="gone"/>


            <Button
                android:id="@+id/bt_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et16"
                android:layout_marginTop="5dp"
                android:text="开始拍照"
                android:background="@drawable/bt_photo"
                />

            <EditText
                android:id="@+id/et7"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1.0"
                android:textSize="16sp"
                android:layout_below="@+id/tv"
                android:layout_alignLeft="@+id/tv"
                android:layout_alignStart="@+id/tv"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/et8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1.0"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/et7"
                android:layout_alignBottom="@+id/et7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:id="@+id/et9"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1.0"
                android:textSize="16sp"
                android:layout_below="@+id/et7"
                android:layout_alignLeft="@+id/et7"
                android:layout_alignStart="@+id/et7"
                android:layout_marginTop="14dp" />

            <EditText
                android:id="@+id/et10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1.0"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/et9"
                android:layout_alignBottom="@+id/et9"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:id="@+id/et11"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1.0"
                android:textSize="16sp"
                android:layout_below="@+id/et9"
                android:layout_alignLeft="@+id/et9"
                android:layout_alignStart="@+id/et9"
                android:layout_marginTop="11dp" />

            <EditText
                android:id="@+id/et12"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1.0"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/et11"
                android:layout_alignBottom="@+id/et11"
                android:layout_toEndOf="@+id/et7"
                android:layout_alignLeft="@+id/et10"
                android:layout_alignStart="@+id/et10" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高层权重："
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/et6"
                android:layout_alignBottom="@+id/et6"
                android:layout_alignLeft="@+id/tv3"
                android:layout_alignStart="@+id/tv3" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="低层权重："
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/et5"
                android:layout_alignBottom="@+id/et5"
                android:layout_alignLeft="@+id/tv4"
                android:layout_alignStart="@+id/tv4" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="近似权重："
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/et4"
                android:layout_alignBottom="@+id/et4"
                android:layout_alignLeft="@+id/tv3"
                android:layout_alignStart="@+id/tv3" />


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
